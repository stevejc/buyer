<%= form_for(@part) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :number %>
  <%= f.text_field :number %>

  <%= f.label :description %>
  <%= f.text_field :description %>
  
  <div class="form-actions">
    <%= f.submit "Save changes", class: "btn btn-warning" %>
    <% if params[:action] == "edit" %>
          <%= link_to 'Cancel', part_path(@part), :class => 'btn' %>
          <%= link_to ' Delete', part_path(@part), confirm: 'Are you sure you want to delete this part, no take backsies?', method: :delete, :class => 'btn float_right' %>
        <% else %>
          <%= link_to 'Cancel', parts_path, :class => 'btn' %>
        <% end %>
  </div>
<% end %>