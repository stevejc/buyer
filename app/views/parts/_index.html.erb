<table class="table table-hover">
  <tr>
    <th>Part</th>
    <th>Part Number</th>
    <th>Description</th>
  </tr>
  
<% @parts.each do |part| %>
  <tr data-link="<%= part_path(part) %>">
    <td><%= part.name %></td>
    <td><%= part.number %></td>
    <td><%= part.description %></td>
  </tr>
<% end %>

</table>

<br />

