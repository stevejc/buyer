<h1>User Show</h1>

<table class="table">
  <tr>
    <td><b>Name:</b></td>
    <td>
      <%= @user.name %>
    </td>
  </tr> 
  
  <tr>
    <td><b>Email:</b></td>
    <td>
      <%= @user.email %>
    </td>
  </tr>
  
  <tr>
    <td><b>Account:</b></td>
    <td>
      <%= @account.name if @account %>
    </td>
  </tr>
   
</table>

<%= link_to 'Back', users_path, :class => 'btn' %>
<%= link_to 'Edit', edit_user_path(@user), :class => 'btn' %>