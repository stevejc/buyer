<%= form_for(@user) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :email %>
  <%= f.text_field :email %>
  
  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.label :password_confirmation, "Confirmation" %>
  <%= f.password_field :password_confirmation %>
  
  <div class="form-actions">
    <%= f.submit "Save changes", class: "btn btn-warning" %>
    <% if params[:action] == "edit" %>
      <%= link_to 'Cancel', user_path(@user), :class => 'btn' %>
      <%= link_to ' Delete', user_path(@user), confirm: 'Are you sure you want to delete this part, no take backsies?', method: :delete, :class => 'btn float_right' %>
    <% else %>
      <%= link_to 'Cancel', users_path, :class => 'btn' %>
    <% end %>
  </div>
<% end %>