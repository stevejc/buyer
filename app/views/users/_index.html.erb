<table class="table table-hover">
  <tr>
    <th>Name</th>
    <th>Email</th>
  </tr>

<% @users.each do |user| %>
  <tr data-link="<%= user_path(user) %>">
    <td><%= user.name %></td>
    <td><%= user.email %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Add a New User', new_user_path, :class => 'btn' %>